---
import SCPLogo from './scp_logo.astro'
const {titleCard,descriptionCard,direction,isImage,imageSRC='',altImage=''} = Astro.props

export const DIRECTION_CARD = Object.freeze({
    NORMAL: 'normal',
    REVERSE: 'reverse'
})
---

<div class={`card-container ${direction === DIRECTION_CARD.NORMAL?'normal':'reverse'}`}>
    <div>
        <h1 class="title">{titleCard.toUpperCase()}</h1>
        <h2 class="subtitle">{descriptionCard.toUpperCase()}</h2>
        <div class="text">
            <slot/>
        </div>
    </div>
        {isImage ? (
                <img src={imageSRC} alt={altImage} class="img-fluid" />
        ) : (
            <div class="graphic-container">
                <SCPLogo />
            </div>
        )}
</div>

<style>
    .card-container {
        display: flex;
        width: 100%;
    }
    .normal {
        flex-direction: row;
    }
    .reverse {
        flex-direction: row-reverse;
    }
    .graphic-container {
        margin-left: -3%;
        width: 105vw;
        height: 120vh;
        text-align: center;
        flex-shrink: 0;
        overflow: hidden;
        overflow-anchor: hidden;
    }

    .text {
        font-size: 1.4em;
        font-family: "Playpen Sans", cursive;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
        margin-top: 12%;
    }
</style>