---
import SCPLogo from './scp_logo.astro'
const {titleCard,descriptionCard,text,direction,isImage,imageSRC='',altImage=''} = Astro.props

export const DIRECTION_CARD = Object.freeze({
    NORMAL: 'normal',
    REVERSE: 'reverse'
})
---

<div class={`card-container ${direction === DIRECTION_CARD.NORMAL?'normal':'reverse'}`}>
    <div>
        <h1 class="title">{titleCard.toUpperCase()}</h1>
        <h2 class="subtitle">{descriptionCard.toUpperCase()}</h2>
        <p class="text parraf-text">{text}</p>
    </div>
        {isImage ? (
                <img src={imageSRC} alt={altImage} class="img-fluid" />
        ) : (
            <div class="graphic-container">
                <SCPLogo />
            </div>
        )}
</div>

<style>
    .card-container {
        display: flex;
        width: 100%;
    }
    .normal {
        flex-direction: row;
    }
    .reverse {
        flex-direction: row-reverse;
    }
    .graphic-container {
        width: 105vw;
        height: 140vh;
        text-align: center;
        flex-shrink: 0;
        overflow: hidden;
        margin-left: -12%;
    }
    
    .parraf-text {
        color: #6b6b6b;
        margin-top: 20px;
    }
</style>